<div class="md:x-py-[20px]">
    <div class="x-min-h-[500px] x-overflow-hidden x-relative" style="background-color: {{ section.settings.background_color }};">
    
        {{ section.settings.mobile_video | video_tag: image_size: '1000x', autoplay: true, muted: true, loop: true, class: 'x-block md:x-hidden x-absolute x-top-1/2 x-left-1/2 x-w-auto x-h-full
        x-min-w-full x-min-h-full x-transform x--translate-x-1/2 x--translate-y-1/2 x-object-cover' }}
        {{ section.settings.desktop_video | video_tag: image_size: '1000x', autoplay: true, muted: true, loop: true, class: 'x-rounded-[clamp(8px,10%,16px)] md:x-block x-hidden x-absolute x-top-1/2 x-left-1/2 x-h-full x-transform x--translate-x-1/2 x--translate-y-1/2' }}
    
    </div>
</div>

{% schema %}
{
    "name": "Video Banner (KSE)",
    "settings": [
        {
            "type":"color",
            "id":"background_color",
            "label":"Background Color"
        },
        {
            "type":"video",
            "id":"mobile_video",
            "label":"Mobile Video"
        },
        {
            "type":"video",
            "id":"desktop_video",
            "label":"Desktop Video"
        }
    ]
}
{% endschema %}